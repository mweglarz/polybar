bar-volume-indicator = |
bar-volume-fill = ─
bar-volume-empty = ─
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/vol1]
inherit = module/vol0
sink = alsa_output.pci-0000_00_1f.3.analog-stereo.monitor

[module/volume]
